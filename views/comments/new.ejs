<% include ../partials/header %>
<h1 class="display-3">Add Comment:</h1>
<div class="row">
    <div class="col"></div>
    <div class="col-8">
        <form action='/blogs/<%= blog._id %>/comments' method='POST'>
            <div class="form-group">
                <label for="blog-body">Comment:</label>
                <textarea class="form-control" id="blog-body" name='comment[comment]' placeholder="Add comment here."></textarea>
            </div>            
            <div class="form-group">
                <label for="blog-title">Author:</label>
                <input type="text" class="form-control" id="blog-title" name='comment[author]'>
            </div>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
    </div>
    <div class="col"></div>
</div>

<% include ../partials/footer %>