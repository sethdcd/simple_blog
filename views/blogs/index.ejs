<% include ../partials/header %>

<!--<h1 class="display-3">Welcome to my humble Soapbox!</h1>-->
<div class='row'>
    <div class='col-md-8'>
        <h1 class="display-2">Blog Posts:</h2>
        <br>
        <% blogs.forEach(function(blog) { %>
            <h1><%= blog.title %></h1>
            <img src='<%= blog.image %>' class='w-50 mx-auto d-block img-thumbnail rounded'>
            <strong><p><%= blog.createdOn.toDateString() %></p></strong>
            <p><%= blog.body %>...</p>
            <a href='/blogs/<%= blog._id %>' class='btn btn-primary'>See more...</a>
        <% }); %>
    </div>
    <div class='col-md-4'>
        <h3>About the Author:</h3>
        <p>He's a d bag!!!</p>
    </div>
    
</div>

<% include ../partials/footer %>